<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/favDetail"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:layout_marginBottom="213dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/allButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favDetail"
        app:srcCompat="@android:drawable/btn_star" />

    <android.support.v7.widget.CardView
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_marginBottom="208dp"
        android:layout_marginEnd="44dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/allButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/imeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ime"
            android:textSize="24sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_marginEnd="44dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favDetail"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/brojInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj"
            android:textSize="24sp" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/allButton"
        android:layout_width="229dp"
        android:layout_height="49dp"
        android:layout_marginBottom="154dp"
        android:layout_marginEnd="77dp"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="77dp"
        android:layout_marginStart="78dp"
        android:text="ALL contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>